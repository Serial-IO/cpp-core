#pragma once

namespace cpp_core
{

struct Version
{
    unsigned int major;
    unsigned int minor;
    unsigned int patch;
};

// Generated at configure time from Git tags (or dirty build version if no tag).
// Version is determined automatically from Git tags and cannot be overridden.
inline constexpr Version kVersion
{
    @CPP_CORE_VERSION_MAJOR@U, @CPP_CORE_VERSION_MINOR@U, @CPP_CORE_VERSION_PATCH@U
};

} // namespace cpp_core
